<core:FragmentDefinition id="TaskSortDialogFragment" xmlns:core="sap.ui.core" xmlns="sap.m">
	<ViewSettingsDialog confirm="onSortDialogConfirmed" id="sortingViewSettingsDialog">
		<sortItems>
			<ViewSettingsItem id="taskTitleSorter" key="TaskTitle" text="{i18n>multi.summary.title}"/>
			<ViewSettingsItem id="statusSorter" key="Status" text="{i18n>sort.status}"/>
			<ViewSettingsItem id="prioritySorter" key="PriorityNumber" text="{i18n>group.priority}"/>
			<ViewSettingsItem id="dueDateSorter" key="CompletionDeadLine" text="{i18n>filter.dueDate}"/>
			<ViewSettingsItem id="createdBySorter" key="CreatedByName" text="{i18n>multi.summary.createdBy}"/>
			<ViewSettingsItem id="creationDateSorter" key="CreatedOn" text="{i18n>view.Information.createdOn}"/>
		</sortItems>
	</ViewSettingsDialog>
